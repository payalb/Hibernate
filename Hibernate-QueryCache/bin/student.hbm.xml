
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    <hibernate-mapping>
    <class name="com.java.model.Student" table="student" schema="hibernatedb" >
    <id name="id" column="sid" >
    <generator class="identity">
    </generator>
    </id>
    <property name="name" column="sname"/>
    <property name="location" column="slocation" > </property>
    <property name="marks" />   
    <property name="rank" not-null="true" />   
    <joined-subclass name="com.java.model.ScienceStudent" table="ScienceStudent" schema="hibernatedb">
    <key column="id"></key>
    <property name="practicalMarks"></property>
   </joined-subclass>
   
     <joined-subclass name="com.java.model.ArtStudent" table="ArtStudent" schema="hibernatedb">
    <key column="id"></key>
    <property name="homeScienceMarks"></property>
   
    </joined-subclass>  
    
    </class> 
 
    
    </hibernate-mapping>